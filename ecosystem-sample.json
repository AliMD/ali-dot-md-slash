{
  /**
   * Application configuration section
   * http://pm2.keymetrics.io/docs/usage/application-declaration/
   */
  "apps": [{
      "name":   "ali-dot-md-slash",
      "script": "src/index.js",
      "args":   [],

      "out_file":   "out.log",
      "error_file": "err.log",
      "merge_logs": true,

      "autorestart": false,
      "max_restarts": 2,
      "ignore_watch": "urls.json",
      "max_memory_restart": "50M",
      "post_update": ["npm install"],
      "exec_interpreter": "babel-node",

      "env": {
        "alimd_host": "0.0.0.0",
        "alimd_port": "8081",
        "alimd_notfound": "/404/",
        "DEBUG": "1db,ali-dot-md-slash:*"
      },
      "env_production": {
        "NODE_ENV": "production"
      }
    }]
}
