{
  /**
   * Application configuration section
   * http://pm2.keymetrics.io/docs/usage/application-declaration/
   */
  "apps": [{
      "name": "alimd",
      "script": "index.js",
      "args": [],

      "out_file": "out.log",
      "error_file": "err.log",
      "merge_logs": true,

      "autorestart": false,
      "max_restarts": 2,
      "ignore_watch": "urls.json",
      "max_memory_restart": "50M",
      "post_update": ["npm install"],
      "exec_interpreter": "n use 6.2.0",

      "env": {
        "AliMD_HOST": "0.0.0.0",
        "AliMD_PORT": "8081",
        "DEBUG": "1db,alimd:*"
      },
      "env_production": {
        "NODE_ENV": "production"
      }
    }]
}
